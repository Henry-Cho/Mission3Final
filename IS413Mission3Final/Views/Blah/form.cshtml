@{
    ViewData["Title"] = "Form";
}

@model formModel;

<h2>Grade Calculator</h2>
<form method="post">
    <label>Assignments: </label>
    <input class="form-control" type="number" id="hw" asp-for="homework" /><br />
    <label>Group Project: </label>
    <input class="form-control" type="number" id="gp" asp-for="gp" /><br />
    <label>Quizzes: </label>
    <input class="form-control" type="number" id="quiz" asp-for="quiz" /><br />
    <label>Exams: </label>
    <input class="form-control" type="number" id="exam" asp-for="exam" /><br />
    <label>INTEX: </label>
    <input class="form-control" type="number" id="intex" asp-for="intex" />
    <br />
    <button id="btn" type="submit" value="Send">Calculate</button>
    <div asp-validation-summary="All;"></div>
</form>

<p>Total Percentage: <span id="tp">@ViewBag.Total_Percentage%</span></p>
<p>Letter Grade: <span id="lg">@ViewBag.Letter_Grade</span></p>

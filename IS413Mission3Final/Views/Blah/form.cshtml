@{
    ViewData["Title"] = "Form";
}

<h2>Grade Calculator</h2>
<form>
    <label>Assignments: </label>
    <input type="number" id="hw" min="0" max="100" required /><br />
    <label>Group Project: </label>
    <input type="number" id="gp" min="0" max="100" required /><br />
    <label>Quizzes: </label>
    <input type="number" id="quiz" min="0" max="100" required /><br />
    <label>Exams: </label>
    <input type="number" id="exam" min="0" max="100" required /><br />
    <label>INTEX: </label>
    <input type="number" id="intex" min="0" max="100" required />
    <br />
    <button id="btn" type="button" value="Send">Calculate</button>
</form>
<p>Total Percentage: <span id="tp"></span></p>
<p>Letter Grade: <span id="lg"></span></p>